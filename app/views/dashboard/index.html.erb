<h1>My Dashboard</h1>

<p>Welcome, <strong><%= current_user.email %></strong></p>

<h2>My Recent Orders</h2>

<% if @orders.any? %>
  <ul>
    <% @orders.each do |order| %>
      <li>
        Order #<%= order.id %> –
        <%= order.status %> –
        <%= number_to_currency(order.total_cents.to_f / 100) %>
        (<%= link_to "View", order_path(order) %>)
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You have no orders yet.</p>
<% end %>
